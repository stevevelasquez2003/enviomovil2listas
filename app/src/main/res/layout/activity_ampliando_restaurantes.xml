<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoRestaurantes"
    android:background="@drawable/restaurantesam"
    >

    <ImageView
        android:id="@+id/imagenAmpliandoR"
        android:layout_width="270dp"
        android:layout_height="277dp"
        android:background="@drawable/restauranteuno"
        android:scaleType="fitXY"
        android:src="@drawable/imagen_personalizada"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"/>

    <TextView
        android:id="@+id/nombreRestaurantesA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre : Hotel La Rivera"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"

        />

    <TextView
        android:id="@+id/precioRestauranteA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="precio: 180000"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"

        />
    <TextView
        android:id="@+id/telefonoRestauranteA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="telefono : 325164859"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.23"

        />

    <Button
        android:id="@+id/botonRestaurantesA"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/botonredondo"
        android:backgroundTint="@color/lightgreen"
        android:text="Reservar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"
        app:layout_constraintVertical_bias="0.712" />

    <TextView
        android:id="@+id/valoracionHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="valoracion : 5"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"

        app:layout_constraintVertical_bias="0.282" />
    <TextView
        android:id="@+id/comentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor   ac dui. Donec nec egestas dolor, eget ultricies orci. Proin hendrerit magna eu consequat vehicula. Nunc euismod arcu nec ante elementum, ac dignissim massa viverra. Morbi rhoncus metus odio, dapibus imperdiet mauris ultricies id. Quisque bibendum turpis sit amet varius interdum. Duis metus nisi, auctor vehicula cursus eget, ornare scelerisque arcu. Maecenas eu nisl sit amet ipsum laoreet dapibus. Maecenas tempor eleifend congue."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoR"
        app:layout_constraintVertical_bias="0.510"
        />

</android.support.constraint.ConstraintLayout>