<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AmpliandoTurismo"
    android:background="@drawable/turismoam">


    <ImageView
        android:id="@+id/imagenAmpliandoT"
        android:layout_width="300dp"
        android:layout_height="315dp"
        android:scaleType="fitXY"
        android:src="@drawable/hoteluno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/nombreTurismoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nombre : Hotel La Rivera"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"

        />

    <TextView
        android:id="@+id/precioTurismoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="precio: 180000"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"

        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/telefonoTurismoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="telefono : 325164859"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"

        app:layout_constraintVertical_bias="0.184" />

    <Button
        android:id="@+id/botonTurismoA"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/botonredondo"
        android:backgroundTint="@color/lightgreen"
        android:text="Reservar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"
        app:layout_constraintVertical_bias="0.669" />

    <TextView
        android:id="@+id/comentariotam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  ornare scelerisque arcu. Maecenas eu nisl sit amet ipsum laoreet dapibus. Maecenas tempor eleifend congue."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"
        app:layout_constraintVertical_bias="0.308" />

    <TextView
        android:id="@+id/valoracionturismo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="valoracion : 5"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAmpliandoT"

        app:layout_constraintVertical_bias="0.252" />

    <ImageView
        android:id="@+id/imagenampliandoturismo"
        android:layout_width="160dp"
        android:layout_height="86dp"
        android:background="@drawable/listarestauranteuno"
        android:scaleType="fitXY"
        android:src="@drawable/imagen_personalizada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752"

        />

</android.support.constraint.ConstraintLayout>